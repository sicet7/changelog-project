<div class="row mx-0">
    <div class="col-12 pt-3 pr-3">
        <div class="row">
            <div class="col-12">
                <nav class="navbar navbar-expand-lg navbar-light bg-transparent px-0" id="filter-navbar">
                    <ul class="navbar-nav">
                        <li class="nav-item active">
                            <a class="nav-link" href="#">Home <span class="sr-only">(current)</span></a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">Features</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">Pricing</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link disabled" href="#" tabindex="-1" aria-disabled="true">Disabled</a>
                        </li>
                    </ul>
                </nav>
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                <table id="entry-table" class="table table-borderless table-hover">
                    <thead>
                    <tr>
                        <th scope="col">Initiated By</th>
                        <th scope="col">Tech</th>
                        <th scope="col">Device</th>
                        <th scope="col">Performed</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for entry in entries.data %}
                        <tr onclick="gotoEntry('{{ entry.getId() }}')" class="clickable-row">
                            <td>{{ entry.getInitiatedBy() }}</td>
                            <td>{{ entry.getTech()|split('@')[0] }}</td>
                            <td>{{ entry.getDevice() }}</td>
                            <td>{{ entry.getCreatedAt()|convertTimezone('UTC', 'Europe/Copenhagen').format('d-m-Y H:i:s') }}</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
        {% if entries.pagination.max > 1 %}
            <div class="row">
                <div class="col-12">
                    <nav aria-label="Page navigation">
                        <ul class="pagination">
                            <li class="page-item{% if entries.pagination.current <= 1 %} disabled{% endif %}">
                                <a class="page-link" href="#" aria-label="Previous">
                                    <span aria-hidden="true">&laquo;</span>
                                    <span class="sr-only">Previous</span>
                                </a>
                            </li>
                            <li class="page-item"><a class="page-link" href="#">1</a></li>
                            <li class="page-item"><a class="page-link" href="#">2</a></li>
                            <li class="page-item"><a class="page-link" href="#">3</a></li>
                            <li class="page-item{% if entries.pagination.current >= entries.pagination.max %} disabled{% endif %}">
                                <a class="page-link" href="#" aria-label="Next">
                                    <span aria-hidden="true">&raquo;</span>
                                    <span class="sr-only">Next</span>
                                </a>
                            </li>
                        </ul>
                    </nav>
                </div>
            </div>
        {% endif %}
    </div>
</div>